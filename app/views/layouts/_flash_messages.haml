- if notice
  .alert.alert-info.alert-dismissable
    %button{ type: "button", class: "close", data: { dismiss: "alert" }, |
             aria: { hidden: true} } &times;
    = notice
- if alert
  .alert.alert-danger.alert-dismissable
    %button{ type: "button", class: "close", data: { dismiss: "alert" }, |
             aria: { hidden: true} } &times;
    = alert